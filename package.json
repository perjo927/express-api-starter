{
  "name": "perjo927/express-api-starter",
  "version": "1.0.0",
  "description": "An Express REST API Starter",
  "main": "./bin/www.js",
  "scripts": {
    "start:dev": "nodemon ./bin/www.js",
    "start:dev:debug": "nodemon --inspect=0.0.0.0:9229 ./bin/www.js",
    "start": "node ./bin/www.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --coverage",
    "test:ci": "jest --coverage && eslint .",
    "test:watch": "jest --watchAll",
    "docker:test": "docker build -t perjo927-express-api-starter --target=test  .",
    "docker:build:dev": "docker build -t perjo927-express-api-starter --target=development .",
    "docker:run:dev": "docker run --rm --name perjo927-express-api-starter_dev -v \"$(pwd):/app\" -p 5000:5000 perjo927-express-api-starter",
    "docker:build": "docker build -t perjo927-express-api-starter --target=production .",
    "docker:run": "docker run --rm --name perjo927-express-api-starter_prod -d -p 5000:5000 perjo927-express-api-starter",
    "docker:interactive": "docker run --interactive --tty --entrypoint /bin/sh perjo927-express-api-starter",
    "docker-container:interactive": "docker exec -t -i perjo927-express-api-starter /bin/sh",
    "start:docker:dev": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "start:docker": "COMPOSE_DOCKER_CLI_BUILD=1 DOCKER_BUILDKIT=1 docker compose -f docker-compose.yml -f docker-compose.prod.yml up --build -d --no-deps",
    "stop:docker": "docker compose down --volumes",
    "scan:docker": "docker scan perjo927-express-api-starter",
    "docker:prune": "docker system prune -a"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "~1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "~4.17.1",
    "firebase-admin": "^9.11.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.0",
    "axios-mock-adapter": "^1.20.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.5"
  }
}
